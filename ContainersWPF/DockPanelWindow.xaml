<Window x:Class="ContainersWPF.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainersWPF"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel>
        <Label Content="Top" DockPanel.Dock="Top" />
        <Label Content="Left" DockPanel.Dock="Left" />
        <Label Content="Right" DockPanel.Dock="Right" />
        <Label Content="Bottom" DockPanel.Dock="Bottom" />
        <Label Content="Center" />
    </DockPanel>
</Window>
